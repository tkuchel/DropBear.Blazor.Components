@inherits ComponentBase
@namespace DropBear.Blazor.Components.Modals

<div class="modal @(IsVisible ? "active" : "")" @onclick="CloseClick">
    <div class="modal-content" @onclick:stopPropagation>
        <div class="modal-header">
            <h2>@Title</h2>
            <button class="modal-close" @onclick="OnClose">&times;</button>
        </div>
        <div class="modal-body">
            @BodyContent
        </div>
        <div class="modal-footer">
            @if (ShowCancelButton)
            {
                <button class="btn btn-secondary" @onclick="OnCancel">@CancelText</button>
            }
            <button class="btn btn-primary" @onclick="OnConfirm">@ConfirmText</button>
        </div>
    </div>
</div>
