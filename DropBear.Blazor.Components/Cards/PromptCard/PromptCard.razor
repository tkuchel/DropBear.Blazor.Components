@inherits ComponentBase
@namespace DropBear.Blazor.Components.Cards.PromptCard

<div class="custom-card">
    <div class="card-header">
        <i class="fas fa-rocket icon-rocket"></i>
        <h5 class="card-title">@Title</h5>
    </div>
    <div class="card-body">
        <p class="card-text">@Content</p>
        <div class="button-group">
            <button class="btn btn-primary custom-btn" @onclick="OnConfirmClick">
                <i class="fas fa-check"></i> Confirm
            </button>
            <button class="btn btn-secondary custom-btn" @onclick="OnCancelClick">
                <i class="fas fa-times"></i> Cancel
            </button>
        </div>
    </div>
</div>