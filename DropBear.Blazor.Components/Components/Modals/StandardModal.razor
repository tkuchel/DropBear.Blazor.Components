@using Microsoft.JSInterop
@inherits ComponentBase
@namespace DropBear.Blazor.Components.Components.Modals
@inject IJSRuntime JsRuntime

@if (IsVisible)
{
    <div class="standard-modal @GetModalClasses()"
         @ref="_modalElement"
         @onclick="CloseClick"
         role="dialog"
         aria-modal="true"
         aria-labelledby="modal-title">
        <div class="standard-modal-content" @onclick:stopPropagation="true">
            @if (CustomHeader != null)
            {
                @CustomHeader
            }
            else
            {
                <div class="standard-modal-header">
                    <h2 id="modal-title">@Title</h2>
                    <button class="standard-modal-close" @onclick="CloseClick" aria-label="Close modal">&times;</button>
                </div>
            }
            <div class="standard-modal-body">
                @BodyContent
            </div>
            @if (CustomFooter != null)
            {
                @CustomFooter
            }
            else
            {
                <div class="standard-modal-footer">
                    @if (ShowCancelButton)
                    {
                        <button class="standard-modal-btn standard-modal-btn-secondary" @onclick="CancelClick">@CancelText</button>
                    }
                    <button class="standard-modal-btn standard-modal-btn-primary" @onclick="ConfirmClick">@ConfirmText</button>
                </div>
            }
        </div>
    </div>
}
