@inherits ComponentBase
@namespace DropBear.Blazor.Components.Components.Buttons

<button class="@GetButtonClasses()"
        disabled="@Disabled"
        @onclick="OnClickHandler"
        type="@Type"
        title="@Title">
    @if (!string.IsNullOrEmpty(IconClass))
    {
        <i class="@IconClass standard-button-icon"></i>
    }
    @if (ChildContent != null)
    {
        <span class="standard-button-text">@ChildContent</span>
    }
</button>
