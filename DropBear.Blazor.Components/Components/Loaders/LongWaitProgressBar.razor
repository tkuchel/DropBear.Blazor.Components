@inherits ComponentBase
namespace DropBear.Blazor.Components.Components.Loaders;

<div class="loading-progress-container">
    <div class="loading-card" style="@CardStyle">
        @if (ShowTitle)
        {
            <h3>
                <i class="@IconClass"></i> @Title
            </h3>
        }
        <div class="progress-container">
            <div class="progress-bar" style="width: @(Progress)%;">
                @if (ShowPercentage)
                {
                    <span class="progress-text">@Progress%</span>
                }
            </div>
        </div>
        @if (ShowProcessingText)
        {
            <p class="processing-text">
                @ProcessingText<span class="dots"></span>
            </p>
        }
        @if (ShowCancelButton)
        {
            <button class="cancel-button" @onclick="HandleCancelClick">@CancelButtonText</button>
        }
    </div>
</div>
