@inherits ComponentBase
@namespace DropBear.Blazor.Components.Components.Loaders

<div class="loading-progress-container @(IsLightMode ? "theme-light" : "theme-dark")">
    <div class="loading-card @(IsCompact ? "compact" : "")" style="@CardStyle;">
        @if (ShowTitle)
        {
            <h3 class="loading-title">
                <i class="@IconClass" aria-hidden="true"></i> @Title
            </h3>
        }
        <div class="progress-container" role="progressbar" aria-valuenow="@Progress" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar" style="width: @(Progress)%;">
                @if (ShowPercentage)
                {
                    <span class="progress-text">@Progress%</span>
                }
            </div>
        </div>
        @if (ShowProcessingText)
        {
            <p class="processing-text">
                @ProcessingText<span class="dots" aria-hidden="true"></span>
            </p>
        }
        @if (ShowCancelButton)
        {
            <button class="cancel-button" @onclick="HandleCancelClick">@CancelButtonText</button>
        }
    </div>
</div>
