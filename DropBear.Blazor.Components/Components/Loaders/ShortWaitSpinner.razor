@inherits ComponentBase
@namespace DropBear.Blazor.Components.Components.Loaders
<div class="short-wait-spinner-container">
    <div class="short-wait-loading-card @(IsCompact ? "compact" : "")" style="@CardStyle;">
        @if (ShowTitle)
        {
            <h3>
                <i class="@IconClass"></i> @Title
            </h3>
        }
        <div class="short-wait-spinner-inner-container">
            <div class="short-wait-spinner" style="@SpinnerStyle;"></div>
        </div>
        @if (ShowLoadingText)
        {
            <p class="short-wait-loading-text">
                @LoadingText<span class="short-wait-dots">...</span>
            </p>
        }
    </div>
</div>
